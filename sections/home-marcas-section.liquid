<style>
  .marcas-slider-wrapper .previous-slide,
  .marcas-slider-wrapper .next-slide {
    position: absolute;
    padding: 0 12px;
    z-index: 1;
    font-size: 1.7rem;
    width: auto;
    top: 0;
    bottom: 0;
  }

  .marcas-slider-wrapper .next-slide svg,
  .marcas-slider-wrapper .previous-slide svg {
    width: 35px;
    height: 35px;
    padding: 7px;
  }

  .marcas-slider-wrapper .previous-slide svg path,
  .marcas-slider-wrapper .next-slide svg path {
    stroke-width: 1;
  }

  .marcas-slider-wrapper .next-slide {
    right: -30px;
  }

  .marcas-slider-wrapper .previous-slide {
    left: -30px;
  }

  .marcas-slider-wrapper .glider-slide {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
</style>

<script>
  const marcasSliderContainer = document.querySelector('.marcas-slider');

  new Glider(marcasSliderContainer, {
    type: 'carousel',
    focusAt: 'center',
    rewind: true,
    slidesToShow: 4,
    slidesToScroll: 4,
    draggable: true,
    arrows: {
      prev: '.marcas-slider-wrapper .previous-slide',
      next: '.marcas-slider-wrapper .next-slide'
    },
    responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 6,
        slidesToScroll: 4
      }
    },
    {
      breakpoint: 1440,
      settings: {
        slidesToShow: 8,
        slidesToScroll: 4
      }
    }
    ]
  });

</script>

