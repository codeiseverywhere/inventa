{% comment %}
	{% include 'campaigns-banner.liquid' %}
{% endcomment %}

{% include 'campaigns-banner' %}

{% schema %}
{
  "name": "Campaign Banners",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Show Banner",
      "default": false
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background",
      "default":"#000000"
    },
    {
      "type": "image_picker",
      "id": "desktop_banner_image",
      "label": "Desktop Banner"
    },
    {
      "type": "radio",
      "id": "desktop_banner_bg_size",
      "label": "Background type",
      "options": [
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "initial",
          "label": "Initial"
        }
      ],
      "default": "cover"
    },
    {
      "type": "image_picker",
      "id": "mobile_banner_image",
      "label": "Mobile Banner"
    },
    {
      "type": "radio",
      "id": "mobile_banner_bg_size",
      "label": "Background type",
      "options": [
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "initial",
          "label": "Initial"
        }
      ],
      "default": "contain"
    },
    {
      "type": "url",
      "id": "banner_url",
      "label": "Banner URL"
    },
    {
      "type": "header",
      "content": "End Date Settings"
    },
    {
      "type": "checkbox",
      "id": "show_timer",
      "label": "Show Timer",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default":"Essa promoção acaba em"
    },
    {
      "type": "color",
      "id": "circle_bg_color",
      "label": "Circle Background",
      "default":"#000000"
    },
    {
      "type": "color",
      "id": "circle_text_color",
      "label": "Circle Text Color",
      "default":"#FFFFFF"
    },
    {
      "type": "range",
      "id": "end_year",
      "label": "Year",
      "min": 2022,
      "max": 2032,
      "step": 1,
      "default": 2022
    },
    {
      "type": "range",
      "id": "end_month",
      "label": "Month",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 11
    },
    {
      "type": "range",
      "id": "end_day",
      "label": "Day",
      "min": 1,
      "max": 31,
      "step": 1,
      "default": 15
    },
    {
      "type": "range",
      "id": "end_hours",
      "label": "Hours",
      "min": 0,
      "max": 23,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "end_minute",
      "label": "Minute",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "end_sec",
      "label": "Seconds",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 0
    }

  ]
}
{% endschema %}