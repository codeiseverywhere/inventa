/* font */
@import url("https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&family=Noto+Sans&family=Roboto&display=swap");
/* variables */
:root {
  --green: #1e8e55;
  --dark-red: #96041b;
  --light-gray: #f2f2f2;
  --dark-gray: #3e3e3e;
  --mid-gray: #888888;
  --lato: "Lato", sans-serif;
  --noto: "Noto Sans", sans-serif;
  --roboto: "Robot", sans-serif;
}

.lato {
  font-family: var(--lato);
}
.noto-sanz {
  font-family: var(--noto);
}
.roboto {
  font-family: var(--roboto);
}

/* reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  overflow-x: hidden;
}

a {
  text-decoration: none;
}

.gallery {
  display: -ms-grid;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  justify-content: center;
  align-items: center;
}

.gallery div img {
  display: block;
  width: 100%;
}

.hidden-img {
  display: none !important;
}
/* footer*/
footer {
  background-color: var(--light-gray);
  height: 40px;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  justify-content: center;
}

footer a {
  display: inline-block;
}

.footer-logo {
  width: 75px;
  margin-right: 8px;
}

.copyright {
  font-family: var(--roboto);
  color: var(--mid-gray);
  font-size: 0.8em;
}

/* OPCOES SECTION */
.opcoes {
  background-color: var(--green);
  color: #ffffff;
  font-family: var(--noto);
  text-align: center;
  height: 350px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 25px;
}

.opcoes h3 {
  font-size: 2.5em;
  font-weight: 200;
}

.opcoes p {
  font-size: 1.2em;
}

.button {
  color: white;
  background-color: var(--dark-red);
  padding: 4px 20px;
  border-radius: 5px;
  font-weight: bold;
  font-size: 1em;
  margin-top: 20px;
  display: inline-block;
}

/* HEADER MOBILE */
.header-mobile {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  background: var(--green) url("https://cdn.shopify.com/s/files/1/0507/3226/9775/files/wave-mobile_2c8b6ab1-1a7f-4af4-96a9-87170b40c68d.svg?v=1637205323") no-repeat bottom center;
  overflow: hidden;
  background-size: 100%;
  width: 100%;
}
.header-mobile .inventa {
  color: white;
}
.hm-row-1 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}
.hm-raminho,
.hm-dots {
  width: 50px;
}
.hm-raminho img,
.hm-dots img {
  width: 100%;
}
.hm-title h1 {
  font-family: var(--noto);
  text-align: center;
  line-height: 2.5;
  font-size: 1.5em;
  margin-bottom: 0;
}
.hm-presente {
  margin-top: -25px;
  width: 400px;
}
.hm-presente img {
  width: 100%;
}
.hm-text p {
  font-size: 2rem;
  font-family: var(--lato);
  text-align: center;
}
.title-bg-white {
  background-color: white;
  color: var(--green);
  padding: 7px;
}
.title-bg-red {
  background-color: var(--dark-red);
  color: white;
  padding: 7px;
}
/*-------------*/
.inventa {
  text-align: center;
  letter-spacing: 8px;
  padding-left: 1rem;
  font-family: var(--lato);
  font-weight: 100;
  color: #fff;
}
/*HEADER DESKTOP*/
.header-desktop {
  background: var(--green) url("https://cdn.shopify.com/s/files/1/0507/3226/9775/files/wave-desktop_3280d8f6-319a-4420-9baa-c78d4e337d9d.svg?v=1637205323") no-repeat bottom
    center;
  background-size: 100%;
  justify-content: center;
  color: white;
  font-family: var(--lato);
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 40px;
  display: none;
  overflow-x: hidden;
}
.header-desktop img {
  width: 100%;
}
.hd-raminho,
.hd-dots {
  width: 150px;
}
.hd-presente {
  width: 400px;
  align-self: flex-end;
  justify-content: center;
}
.hd-arbol {
  width: 300px;
  align-self: flex-end;
  justify-content: center;
}
.hd-arbol img {
  margin-left: 80px;
}
.hd-row-1 {
  display: flex;
  flex-direction: row;
  margin-bottom: 30px;
  justify-content: space-between;
}
.hd-text p {
  font-size: 25px;
}
.hd-title {
  width: 50%;
  align-self: center;
}
.hd-title h1 {
  text-transform: uppercase;
  font-size: 40px;
  text-align: center;
  line-height: 70px;
}
/*VANTAGENS SECTION DESKTOP*/
.vantagens {
  font-family: var(--lato);
  color: var(--dark-gray);
  padding: 1.8em 0;
}

/*DISPLAY NONE*/
.vantagens-desktop {
  display: none;
}

.vd-row-1 {
  position: relative;
}
.vd-title h2 {
  text-align: center;
  font-size: 1.8em;
  font-weight: 400;
  padding-top: 1em;
}
.vd-presente-icon {
  width: 200px;
  position: absolute;
  right: 0;
  top: -130px;
}
.vd-presente-icon img {
  width: 100%;
}
.vd-row-2 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
.vd-product-1 {
  width: 40%;
  position: relative;
}
.vd-product-1 img {
  position: absolute;
  top: -300px;
  left: -120px;
}
.vd-product-2 {
  position: relative;
  width: 20%;
}
.vd-product-2 img {
  position: absolute;
  top: -200px;
  right: -110px;
}
.vd-items-icon {
  width: 150px;
}
.vd-items-frete .vd-items-icon {
  width: 210px;
}
.vd-items {
  display: flex;
  justify-content: center;
  flex-direction: column;
  row-gap: 5em;
  margin: 5em 0;
}
.vd-items div {
  display: flex;
  align-self: center;
  column-gap: 2em;
}
.vd-items-text {
  flex-direction: column;
}
.vd-items-title {
  font-size: 2em;
  font-weight: 500;
}
.vd-items-paragraph {
  font-size: 1.5em;
  font-weight: 300;
}
.vd-items-credito,
.vd-items-desconto {
  text-align: right;
}
.vd-items-frete {
  position: relative;
  right: 200px;
}
/*VANTAGENS SECTION MOBILE*/
.vantagens-mobile {
  padding: 0 20px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.vm-row-1,
.vm-row-2 {
  display: flex;
  align-items: center;
}
.vm-product-1,
.vm-product-2 {
  width: 200px;
}
.vm-product-1 {
  position: relative;
  left: -10px;
}
.vm-product-2 {
  position: relative;
  right: -50px;
}
.vm-items-credito {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  text-align: right;
}
.vm-items-icon {
  width: 70px;
}
.vm-items-title {
  font-size: 1.2em;
}
.vm-items-paragraph {
  font-size: 0.9em;
}
.vm-items-desconto {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: right;
}

/*FOOTER*/
footer {
  justify-content: flex-start;
  padding-left: 0 20px;
  height: 80px;
}
footer .inventa {
  color: var(--dark-gray);
  font-family: var(--lato);
  font-size: 1.5em;
  font-weight: 200;
}
/*-------------*/
/* small tablets */
@media screen and (min-width: 620px) {
  footer {
    justify-content: center;
    height: 40px;
  }
  footer .inventa {
    font-size: 1em;
  }
  .header-desktop {
    display: flex;
  }
  .header-mobile {
    display: none;
  }
}
/*-------------*/
/* large tablets and laptop */
@media screen and (min-width: 980px) {
  .gallery {
    grid-template-columns: repeat(5, 1fr);
  }
  .hidden-img {
    display: block !important;
  }

  .vd-items-frete {
    right: 200px;
  }
  .vd-items-icon {
    width: 100px;
  }
  .vd-items-frete .vd-items-icon {
    width: 150px;
  }
  .vantagens-desktop {
    display: block;
  }
  .vantagens-mobile {
    display: none;
  }
  .hd-arbol img {
    margin-left: 0 !important;
  }
}

/* desktop */
@media screen and (max-width: 1025px) {
  .vd-items-title {
    font-size: 1.7em;
  }
  .vd-items-paragraph {
    font-size: 1.2em;
  }
  .vd-items-icon {
    width: 100px;
  }
  .vd-items-frete .vd-items-icon {
    width: 150px;
  }
  .vd-product-1 {
    width: 40%;
  }
  .vd-product-1 img {
    top: -220px;
  }
  .vd-product-2 {
    width: 20%;
  }
  .vd-items-frete {
    right: 200px;
  }
}

