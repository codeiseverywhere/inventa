@import url("https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap");

.modal-popup .cf-field[data-cf-field-type="checkbox"] {
  flex-wrap: nowrap !important;
}

.modal-inner .form__input-wrapper .form__field {
  height: 56px !important;
}
.modal-popup {
  background: rgba(26, 26, 26, 0.6);
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  top: 0;
  display: none;
  opacity: 0;
  overflow-y: auto;
}
.modal-popup_open {
  display: flex;
  opacity: 1;
  animation: fadeIn forwards 1.2s;
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.modal-inner {
  width: 50%;
  min-width: 550px;
  min-height: 200px;
  height: fit-content;
  background-color: #fff;
  position: relative;
  top: 100px;
  max-width: 900px;
}
.modal_banner {
  width: 400px;
  mix-blend-mode: normal;
  font-family: "Noto Sans", sans-serif;
}
.modal_close-btn {
  left: 1.5rem;
  top: 1rem;
  display: none;
}
button[disabled].button p.btn-text,
button.cf-next-step[disabled] p.btn-text {
  transition: opacity 1s ease-in-out;
  line-height: 3.5rem !important;
}
.modal-inner button[type="submit"].button .btn-text,
.modal-inner button.cf-next-step .btn-text {
  opacity: 1;
  transition: opacity 1s ease-in-out;
}
.modal-inner button[type="submit"].button,
.modal-inner button.cf-next-step {
  opacity: 1;
  width: 100%;
  font-size: 20px !important;
  line-height: 27px !important;
}
@media (max-width: 1000px) {
  .body-1-density-3 {
    font-size: 15px !important;
    line-height: 20px !important;
  }
}
.modal_forgotPassword:hover,
.goToLogin:hover,
.goToRegister:hover {
  cursor: pointer;
}
.goToRegister {
  width: 100%;
}
.modal-inner form {
  padding-bottom: 25px;
  margin-bottom: 25px;
  border-bottom: 1px solid #c4c4c4;
}
.desktop-closebtn {
  right: -40px;
}

.modal-inner fieldset.cf-fields-container {
  display: block !important;
}
.modal-inner .cf-form-inner .cf-form-actions {
  margin-top: 1em !important;
}
.modal-inner fieldset .cf-field.terms-container .cf-field-description {
  width: auto;
  padding: 0 4px;
  font-size: 15px !important;
}
.modal-inner fieldset .cf-field.terms-container {
  color: #1a1a1a !important;
}
.modal-inner .register-form .cf-form-actions button.cf-submit-form,
.modal-inner .register-form .cf-form-actions button.cf-next-step {
  color: #000 !important;
  background-color: #ffc107 !important;
  border-color: #ffc107 !important;
  padding-top: 1rem !important;
  padding-bottom: 1rem !important;
}

