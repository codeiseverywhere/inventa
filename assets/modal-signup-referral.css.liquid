.modal-inner .register-form .cf-form-actions a {
  text-decoration: underline;
  color: #0000ee;
}
.modal-inner .register-form .cf-form-actions a:visited {
  color: #551a8b;
}

.modal-popup img.test-ab_mobile-view {
  display: none;
}
.modal-popup .test-ab_desktop-view {
  display: initial;
  margin-top: -150px;
}

@media (max-width: 900px) {
  .modal-popup .test-ab_mobile-view {
    display: initial !important;
  }
  .modal-popup .test-ab_desktop-view {
    display: none !important;
  }

  .modal-popup {
    align-items: unset;
  }
  .modal-inner {
    width: 100%;
    min-height: 100vh;
    height: max-content;
    min-width: 0;
    top: 0;
    background-color: #fff;
    display: block !important;
  }
  .modal_banner {
    width: 100%;
  }
  .modal_banner h3 {
    font-size: 32px !important;
  }
  .modal_close-btn {
    display: block;
  }
  .modal-inner button[type="submit"].button,
  .modal-inner button.cf-next-step {
    width: 100%;
  }
  .desktop-closebtn {
    top: 14px;
    right:18px;
  }
  .add-layout-banner {
  margin: 0px !important;
}
  .modal_forms{
    margin-top:50px;
  }
}

.modal-inner .spinner-container {
  display: none;
  position: absolute;
  top: 20%;
  left: 30%;
}

.modal-inner .form-container.loading {
  opacity: 0.4;
}

.modal-inner .form-container.loading .spinner-container {
  display: block !important;
}

.modal-inner .terms-container[data-cf-invalid="true"] {
  color: #000 !important;
}

.register-form .cf-step-counter,
.register-form .cf-prev-step {
  display: none !important;
}
.register-form .cf-step-tabs {
  border-bottom: none !important;
  margin-bottom: 0 !important;
  color: #1a1a1a;
}
.register-form .cf-field[data-cf-invalid="true"] .cf-enum-field__choice,
.register-form .cf-field[data-cf-invalid="true"] legend,
.register-form .cf-field[data-cf-invalid="true"] label {
  color: #1a1a1a !important;
}
.register-form .cf-field label,
.register-form .cf-enum-field__choices legend {
  color: #1a1a1a;
  font-size: 1.2rem;
}
.register-form .cf-enum-field__choice {
  color: #1a1a1a;
}

