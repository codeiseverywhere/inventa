<style>
    .pagamento-popup{
        background: rgba(34, 34, 34, 0.8);
        position: absolute;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        top: 0;
        display: none;
        opacity: 0;
        overflow-y: auto;
    }

    .pagamento-popup .icon-payment {
        fill: #C7D3D9;
    }

    @media (min-width: 992px){
        .truepay-desc-padding{
            padding-left: calc(53px + 1.5rem);
        }
        .pagamento-popup{
            top: 120px;
        }
    }
    .pagamento-popup_open{
        display: flex;
        opacity: 1;
        animation: fadeIn forwards 1.2s;
    }
    @keyframes fadeIn{
        from{
            opacity: 0;
        }
        to{
            opacity: 1;
        }
    }
    .pagamento-inner{
        width: 60%;
        min-width: 850px;
        max-height: calc(100vh - 180px);
        overflow-y: auto;
        overflow-x: hidden;
        height: fit-content;
        background-color: #fff;
        position: relative;
        top: 20px;
        max-width: 900px;
    }
    .pagamento_desktop-closebtn{
        right: -40px;
        top: 0;
    }
    @media (max-width: 900px){
        .pagamento-inner{
            width: calc(100vw - 20px);
            max-height: calc(100vh - 100px);
            height: max-content;
            min-width: 0;
            top: 80px;
            background-color: #fff;
            display: block !important;
        }
        .pagamento_desktop-closebtn{
            right: 20px;
            top: 20px;
        }
        .pagamento_desktop-closebtn path{
            fill: #000;
        }
    }
</style>

<script defer>
    setTimeout(() => {
        const popup = document.querySelector('.pagamento-popup');
        if(popup) popup.removeAttribute('style');
    }, 500);
</script>

<script defer>
    function openPagamentoPopup() {
        const popup = document.querySelector('.pagamento-popup');
        if(popup) popup.classList.add('pagamento-popup_open');
    }

    function closePagamentoPopup() {
        const popup = document.querySelector('.pagamento-popup');
        if(popup) popup.classList.remove('pagamento-popup_open');
    }

    const pagamento_popup = document.querySelector('.pagamento-popup');
    function initPagamentoPopup() {
        if(pagamento_popup){
            const innerModal = document.querySelector('.pagamento-inner');
            pagamento_popup.addEventListener('click', (e) => {
                if(!innerModal.contains(e.target)) closePagamentoPopup();
            })
        }
    }
    
    function pagamento_GoToWA(){
        const url = 'https://wa.me/5511974787600';
        window.open(url, '_blank').focus();
    }

    initPagamentoPopup();
</script>